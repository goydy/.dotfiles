#Open RXVT Unicode Terminal (Emaulated)
super + Return
	urxvt

#Launch Basic ROFI Menu (Menu's need riced, this is just a bootstrap atm)
super + @space
	rofi -show drun -disable-history -show-icons

#Start Chromium (B for Browser)
super + b
	chromium

#Start VS Code (E for Editor)
super + e
	code

#Reload Key bindings
super + Escape
	pkill -USR1 -x sxhkd

#Quit or Restart BPSWM
super + alt + {q,r}
	bspc {quit,wm -r}

# Close and Kill a Window / Node
super + {_,shift + }w
	bspc node -{c,k}

#Send window to Desktop and open that Desktop (Workspace)
super + shift + {1-9,0}
	bspc node -d '^{1-9,10}' --follow

# Swap current Window with Biggest Window (Not nescacerilly on same desktop)
super + g
	bspc node -s biggest.window

#Set the Window between Tiled and Full Screen
super + {t,shift + t,s,f}
        bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# Move the selected Window to the target node
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

#Focus on the given Desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

#Preselect the new windows direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

#Preselect the new windows ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

#Cancel the Preselecction
super + ctrl + space
	bspc node -p cancel

#Expand a Window
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

#Contract a Window
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

#Move a floating Window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}